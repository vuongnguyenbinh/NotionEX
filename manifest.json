{
  "manifest_version": 3,
  "name": "Notion Sidebar",
  "version": "1.0.0",
  "description": "Quản lý công việc, dấu trang và ghi chú với Notion sync",
  "permissions": [
    "sidePanel",
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.notion.com/*"
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
